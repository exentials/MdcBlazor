@namespace Exentials.MdcBlazor
@inherits MdcComponentBase
<div @ref="Ref" id="@Id" class="mdc-chip @CssAttributes" role="row">
    <div class="mdc-chip__ripple"></div>
    @if (Has(LeadingIcon))
    {
    <i class="material-icons mdc-chip__icon mdc-chip__icon--leading">@LeadingIcon</i>
    }
    @if (Selected)
    {
    <span class="mdc-chip__checkmark">
        <svg class="mdc-chip__checkmark-svg" viewBox="-2 -3 30 30">
            <path class="mdc-chip__checkmark-path" fill="none" stroke="black" d="M1.73,12.91 8.1,19.28 22.79,4.59" />
        </svg>
    </span>
    }
    <span role="gridcell">
        <span @attributes="PrimaryActionAttributes" tabindex="-1" class="mdc-chip__primary-action">
            <span class="mdc-chip__text">@Text</span>
        </span>
    </span>
    @if (Has(TrailingCloseIcon))
    {
    <span role="gridcell">
        <i class="@MdcCss.MaterialIcons mdc-chip__icon mdc-chip__icon--trailing mdc-chip-trailing-action" tabindex="-1" role="button">@TrailingCloseIcon</i>
    </span>
    }
</div>