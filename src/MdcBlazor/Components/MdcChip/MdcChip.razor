@namespace Exentials.MdcBlazor
@inherits MdcComponentBase
<div @ref="Ref" id="@Id" class="mdc-chip @CssAttributes" role="row">
    <div class="mdc-chip__ripple"></div>
    @if (Selected)
    {
    <span class="mdc-chip__checkmark" >
      <svg class="mdc-chip__checkmark-svg" viewBox="-2 -3 30 30">
        <path class="mdc-chip__checkmark-path" fill="none" stroke="black"
              d="M1.73,12.91 8.1,19.28 22.79,4.59"/>
      </svg>
    </span>
    }
    else if (Has(LeadingIcon))
    {
    <i class="material-icons mdc-chip__icon mdc-chip__icon--leading">@LeadingIcon</i>
    }
    <span role="gridcell">
        <span class="mdc-chip__primary-action" @attributes="PrimaryActionAttributes" >
            <span class="mdc-chip__text">@Text</span>
        </span>
    </span>
    @if(Has(TrailingIcon))
    {
    <span role="gridcell">
        <i class="material-icons mdc-chip__icon mdc-chip__icon--trailing" tabindex="-1" role="button">cancel</i>
    </span>
    }
</div>