@namespace Exentials.MdcBlazor
@inherits MdcInputTextComponentBase
@if (Outlined)
{
<label @ref="Ref" class="mdc-text-field mdc-text-field--outlined mdc-text-field--textarea @CssAttributes">
    <span class="mdc-notched-outline">
        <span class="mdc-notched-outline__leading"></span>
        @if (!NoLabel)
            {
        <span class="mdc-notched-outline__notch">
            <span class="mdc-floating-label" id="@LabelId">@Label</span>
        </span>
        }
        <span class="mdc-notched-outline__trailing"></span>
    </span>
    @if (Resizable)
        {
    <span class="mdc-text-field__resizer">
        <textarea class="mdc-text-field__input" rows="8" cols="40" aria-label="@Label" aria-labelledby="@LabelId" disabled="@Disabled"></textarea>
    </span>
    }
        else
        {
    <textarea class="mdc-text-field__input" rows="8" cols="40" aria-label="@Label" disabled="@Disabled"></textarea>
    }
</label>
}
else
{
<label @ref="Ref" class="mdc-text-field mdc-text-field--filled mdc-text-field--textarea @CssAttributes">
    <span class="mdc-text-field__ripple"></span>
    @if (!NoLabel)
        {
    <span class="mdc-floating-label" id="@LabelId">@Label</span>
    }
    @if (Resizable)
        {
    <span class="mdc-text-field__resizer">
        <textarea class="mdc-text-field__input" rows="8" cols="40" aria-label="@Label" disabled="@Disabled"></textarea>
    </span>
    }
        else
        {
    <textarea class="mdc-text-field__input" rows="8" cols="40" aria-label="@Label" disabled="@Disabled"></textarea>
    }
    <span class="mdc-line-ripple"></span>
</label>
}


