@namespace Exentials.MdcBlazor
@inherits MdcComponentBase
<div @ref="Ref" class="mdc-banner @CssAttributes" role="banner">
    @if (Fixed)
    {
    @:<div class="mdc-banner__fixed">
    }
    <div class="mdc-banner__content" role="status" aria-live="assertive">
        <div class="mdc-banner__graphic-text-wrapper">
            @if (Has(Icon))
            {
                <div class="mdc-banner__graphic" role="img" alt=""><i class="material-icons mdc-banner__icon">@Icon</i></div>
            }
            <div class="mdc-banner__text">
                @Text
            </div>
        </div>
        <div class="mdc-banner__actions">
            @if (Has(SecondaryActionLabel))
            {
                <button type="button" class="mdc-button mdc-banner__secondary-action" @onclick="SecondaryClickHandle">
                    <div class="mdc-button__ripple"></div>
                    <div class="mdc-button__label">@SecondaryActionLabel</div>
                </button>
            }
            @if (Has(PrimaryActionLabel))
            {
                <button type="button" class="mdc-button mdc-banner__primary-action" @onclick="PrimaryClickHandle">
                    <div class="mdc-button__ripple"></div>
                    <div class="mdc-button__label">@PrimaryActionLabel</div>
                </button>
            }
        </div>
    </div>

    @if (Fixed)
    {
    @:</div>
    }
</div>

