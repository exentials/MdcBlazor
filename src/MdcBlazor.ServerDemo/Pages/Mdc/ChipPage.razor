<MdcChipset Type="@MdcChipsetType.Choice">
    <ChipDataset DataSource="chips" />
</MdcChipset>


<MdcHeadline4>Filter Chipset</MdcHeadline4>
<MdcChipset Type="@MdcChipsetType.Filter">
    <ChipDataset DataSource="chips" />
</MdcChipset>

<MdcHeadline4>Input Chipset</MdcHeadline4>
<MdcChipset Type="@MdcChipsetType.Input">    
    <ChipDataset DataSource="chips" />
</MdcChipset>

<MdcHeadline4>Action Chipset</MdcHeadline4>
<MdcChipset Type="@MdcChipsetType.Action">   
    <ChipDataset DataSource="chips" />
</MdcChipset>

