@page "/drawers"

<MdcHeadline6>Drawers</MdcHeadline6>

<MdcButton ButtonType="MdcButtonType.Outlined" Label="Top app bar" OnClick="() => LayoutChange(0)" />
<MdcButton ButtonType="MdcButtonType.Outlined" Label="Side drawer" OnClick="() => LayoutChange(1)" />
<MdcButton ButtonType="MdcButtonType.Outlined" Label="Modal" OnClick="()=> LayoutChange(2)" />

@code {


    [CascadingParameter] MainLayout Layout { get; set; }


    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    void LayoutChange(int index)
    {
        if (Layout != null)
        {
            Layout.Change(index);
        }
    }

}