@inherits LayoutComponentBase
<MdcTopAppBarContainer Fixed="true">
    <MdcTopAppBar>
        <MdcTopAppBarRow>
            <MdcTopAppBarSectionStart>
                <MdcTopAppBarNavIcon Icon="menu" Label="Open navigation menu" />
                <MdcTopAppBarTitle>MdcBlazor Demo</MdcTopAppBarTitle>
            </MdcTopAppBarSectionStart>
            <MdcTopAppBarSectionEnd>
                <MdcTopAppBarActionButton Label="Favorite" Icon="favorite" />
                <MdcTopAppBarActionButton Label="Search" Icon="search" />
                <MdcTopAppBarActionButton Label="Options" Icon="more_vert" />
            </MdcTopAppBarSectionEnd>
        </MdcTopAppBarRow>
    </MdcTopAppBar>
    <MdcDrawer Mode="MdcDrawerMode.Dismissible" @bind-Open="drawerOpened">
        <MdcDrawerHeader>
            <MdcDrawerTitle>Components</MdcDrawerTitle>
            <MdcDrawerSubtitle>by MdcBlazor</MdcDrawerSubtitle>
        </MdcDrawerHeader>
        <MdcDrawerContent>
            <MdcDrawerNav>
                <MdcDrawerNavItem Href="/buttons">Buttons</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/cards">Cards</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/checkboxes">Checkboxes</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/chips">Chips</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/datatables">Data tables</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/elevations">Elevations</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/fabs">FABs</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/lists">Lists</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/progressindicators">Progress indicators</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/radios">Radios</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/selects">Selects</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/sliders">Sliders</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/snackbars">Snackbars</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/switches">Switches</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/tabs">Tabs</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/textinputs">Text inputs</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/typography">Tipography</MdcDrawerNavItem>
                <MdcDrawerNavItem Href="/materialicons">Material Icons</MdcDrawerNavItem>
            </MdcDrawerNav>
        </MdcDrawerContent>
    </MdcDrawer>
    <MdcDrawerAppContent>
        <div class="demo-page">
            @Body
        </div>
    </MdcDrawerAppContent>
</MdcTopAppBarContainer>

<MdcSnackbarService />

@code  {
    bool drawerOpened = true;
}
